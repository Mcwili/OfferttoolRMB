{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pip install -r backend/requirements.txt"
  },
  "deploy": {
    "startCommand": "/bin/sh -c 'cd backend && uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}'",
    "healthcheckPath": "/"
  }
}
